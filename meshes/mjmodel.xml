            <joint name="joint_4" pos="0 0 0" axis="0 0 1" range="-2.089 2.089" actuatorfrcrange="-1 1"/>
            <geom type="mesh" mesh="forearm_link"/>
            <body name="wrist_link" pos="0 0 0.18" quat="0.707107 0 -0.707107 0">
