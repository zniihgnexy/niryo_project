<?xml version="1.0"?>
<robot name="niryo_one">
  <!-- Links -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://niryo_one_description/meshes/base_link.stl"/>
      </geometry>
    </visual>
  </link>

  <link name="shoulder_link">
    <visual>
      <origin xyz="0 0 0.203" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://niryo_one_description/meshes/shoulder_link.stl"/>
      </geometry>
    </visual>
  </link>

  <link name="arm_link">
    <visual>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://niryo_one_description/meshes/arm_link.stl"/>
      </geometry>
    </visual>
  </link>

  <link name="elbow_link">
    <visual>
      <origin xyz="0.21 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://niryo_one_description/meshes/elbow_link.stl"/>
      </geometry>
    </visual>
  </link>

  <link name="forearm_link">
    <visual>
      <origin xyz="0.0415 0.03 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://niryo_one_description/meshes/forearm_link.stl"/>
      </geometry>
    </visual>
  </link>

  <link name="wrist_link">
    <visual>
      <origin xyz="0 0 0.18" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://niryo_one_description/meshes/wrist_link.stl"/>
      </geometry>
    </visual>
  </link>

  <link name="hand_link">
    <visual>
      <origin xyz="0.0164 -0.0055 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://niryo_one_description/meshes/hand_link.stl"/>
      </geometry>
    </visual>
  </link>

  <!-- Joints -->
  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.203" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.949" upper="2.949" effort="1" velocity="1"/>
  </joint>

  <joint name="joint_2" type="revolute">
    <parent link="shoulder_link"/>
    <child link="arm_link"/>
    <origin xyz="0 0 0.08" rpy="0.5 0.5 -0.5"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.83" upper="0.61" effort="2" velocity="1"/>
  </joint>

  <joint name="joint_3" type="revolute">
    <parent link="arm_link"/>
    <child link="elbow_link"/>
    <origin xyz="0.21 0 0" rpy="0 0 -0.5708"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.51" upper="0.46" effort="2" velocity="1"/>
  </joint>

  <joint name="joint_4" type="revolute">
    <parent link="elbow_link"/>
    <child link="forearm_link"/>
    <origin xyz="0.0415 0.03 0" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.089" upper="-0.000" effort="1" velocity="1"/>
  </joint>

  <joint name="joint_5" type="revolute">
    <parent link="forearm_link"/>
    <child link="wrist_link"/>
    <origin xyz="0 0 0.19" rpy="0 -1.5708 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.74533" upper="1.91986" effort="1" velocity="1"/>
  </joint>

  <joint name="joint_6" type="revolute">
    <parent link="wrist_link"/>
    <child link="hand_link"/>
    <origin xyz="0.0164 -0.0055 0" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
    <!-- <limit lower="-2.57436" upper="2.57436" effort="1" velocity="1"/> -->

    <limit lower="-1.7000" upper="1.5000" effort="1" velocity="1"/>
  </joint>
</robot>
