                <inertial pos="0 0 0" mass="0.0070027" diaginertia="0.0015 0.0015 0.0015"/>
                <joint name="joint_6" pos="0 0 0" axis="0 0 1" range="-2.57436 2.57436" actuatorfrcrange="-1 1"/>
                <geom type="mesh" mesh="hand_link"/>
                <geom pos="0.027 0 0.015" quat="-0.499999 0.499999 0.500001 -0.500001" type="mesh" mesh="g1_mainSupport"/>
