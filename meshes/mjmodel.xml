  <actuator>
    <position joint="joint_1"/>
    <position joint="joint_2"/>
    <position joint="joint_3"/>
    <position joint="joint_4"/>
    <position joint="joint_5"/>
    <position joint="joint_6"/>
    <position joint="left_clamp_joint"/>
    <position joint="right_clamp_joint"/>
  </actuator>
</mujoco>
